# EditorConfig is awesome: https://editorconfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 4 space indentation for Python files
[*.py]
indent_style = space
indent_size = 4
charset = utf-8

# 2 space indentation for HTML files
[*.html]
indent_style = space
indent_size = 2
charset = utf-8

# 2 space indentation for js, ts files
[*.js,*.ts]
indent_style = space
indent_size = 2
charset = utf-8

# 4 space indentation for Solidity files
[*.sol]
indent_style = space
indent_size = 4
charset = utf-8
